@import _avatar
@import _read_more
@import investment

// colors
highlight = #f60
orange = #fbb03b
green = #8cc63f

.classroom-teacher-visible
  display: none

.classroom-is-teacher .classroom-teacher-visible
  display: block


.classroom-is-teacher
  

.colored-box
  min-height: 100vh

body #scrollview
  padding-bottom: 0

body
  user-select: none
  background-image: url('img/green-fibers.png')

#modal-full-screen
  background-color: #fff !important

.menu-item:hover
  background-color: green

// Cover page
#textbook
  background: #424242
  width: 100% !important

#home-cover
  background: #FFFDE7 no-repeat
  // background-size: cover
  // background-position: right top 
  min-height: 100vh
  .goto
    // display: block
    text-align: center
    padding-top: 1em
    padding-bottom: 1.5em
    color: white
    background: #424242
    p
      font-size: 2.5em
      display: inline-block
      border-bottom: 2px dashed white
      margin: 0
      padding: 0

  .cover-page
    padding: 1em;
    #name-input
      // text-align: center;
      margin-left: -0.7em;
      input 
        padding-left: 0.3em
        font-size: 1.8em
        background: white
        color: black
        border: 1px dashed black
        &:hover
          border: 1px solid orange
    .small
      margin-left: 0px
      padding-left: 0px

    .classroom-client
      font-family: "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
      font-size: 0.8em;
      display: inline-block;
      padding: 10px
      margin: 0.2em
      width: auto;
      text-overflow: ellipsis;
      border: 1px solid #ccc;

      color: #006100;
      // .away-label, .teacher-label
        // display: none;

      &.classroom-client-away
        color: #ff6600;
        
      .ring-bell
        padding-left: .5em
        padding-right: .5em
        margin: 0
        &:hover
          color: orange
    .devices, .screens
      i
        display: inline-block
        margin: 0.5em 0.5em 0 0.5em
        font-size: 2em

#textbook
  .header
    // background: black
    display: block
    padding: 1em
    text-align: center
    margin-bottom: 2em
    p
      display: inline-block
      font-size: 1.5em !important
      border: 1px solid black
      border-left: 5px solid green
      padding: .5em
      margin: 0em
      text-align: right
      
  // Exercises

  .ee3-demo-investors-buttons
    button:focus, button:active
      outline: 0 !important;
      
    .pickone-button-item
      font-size: 1.2em;
      margin: 0 10px 20px 10px
      padding 10px 1.5em

    
  .question
    font-size: 3em
    text-align: center
    margin-top: 1em
    margin-bottom: 1em
    color: white

  .img-circle
    border: 5px solid green
    &.textbooks
      border: 5px solid orange

  .not
    color: black
    font-size: 1.5em
    .fa
      color: orange

  .cool
    color: black
    font-size: 1.5em
    .fa
      color: green
    

  .margin-top
    margin-top: 2em

  .orange
    color: orange
  .green
    color: green

  .vertical-align
    display: flex
    align-items: center


  @import '01.03.how-it-works'

  .scissors
    display: flex
    align-items: center
    justify-content: center
    img
      max-width: 200px
      max-height: 200px
      
#laptop-works
    ul
      margin-top: 1em

  .row-box
    border: 1px solid black
    margin-bottom: 1em
    
  .tier-box
    border: 1px dashed black
    margin-bottom: 1em
    padding: 0.8em
    text-align: center
    &.tier2
      border: 1px solid black
    p 
      padding: 0
      margin: 0
      &.tier
        font-size: 1em
      &.text
        font-size: 1em
  .center
    text-align: center

  .inline
    display: inline-block
    border: 1px dashed black
    padding: 0.3em

  .teacher-unvisible
    display: none

  .box
    // background: black
    display: block
    padding: 1em
    text-align: center
    margin-bottom: 2em
    p
      display: inline-block
      font-size: 1.5em
      border: 1px solid black
      // border-left: 5px solid green
      padding: .5em
      margin: 0em
      text-align: right

  .colored-box
    display: flex
    min-height: 100vh
    align-items: center
    justify-content: center
    padding: 0
    margin: 0
    &.red
      background-color: #F44336
      color: white
    &.blue
      background-color: #3F51B5
      color: white
    &.teal
      background-color: #009688
      color: white
    &.green
      background-color: #1B5E20
      color: white
    &.light-green
      background-color: #33691E
      color: white
    &.orange
      background-color: #BF360C
      color: white
    &.special-orange
      background-color: #F5A623
      color: white
    &.light-blue
      background-color: #01579B
      color: white
    &.brown
      background-color: #4E342E
      color: white
    &.indigo
      background-color: #3F51B5
      color: white
    

    .question
      margin: 0.1em auto
      padding: 0
      font-size: 3em
      line-height: 110%
      text-align: center
      &.box
        border: 1px solid white
        display: inline-block
        padding: 0.2em
      &.margin-top
        margin-top: 2em
      span.smallish
        font-size: 60%
        color: black;

    @media (max-width: 767px)
      min-height: 85vh
      .question
        font-size: 2em
        padding: 0.2em

    span.underline
      border-bottom: 0.1em solid white

    span.strikethrough
      text-decoration:line-through !important
      color: rgba(255,255,255,0.5)

  .flex
    height: 100%
    display: flex
    align-content: center
    justify-content: center
    .pickone-buttons
      display: flex
      align-content: center
      justify-content: center
      flex-wrap: wrap

  .ee3-demo-invest-dashboard
    .classroom-dashboard-panel
      background: transparent
      border: 1px dashed white
      
  .col-white
    background-color: white

